{
  "name": "erp-saas-mysql-backend",
  "version": "1.0.0",
  "description": "MySQL Backend for Enterprise ERP SaaS Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:setup": "mysql -u root -p < database/schema.sql",
    "db:reset": "mysql -u root -p -e 'DROP DATABASE IF EXISTS erp_saas' && npm run db:setup"
  },
  "keywords": [
    "erp",
    "saas",
    "mysql",
    "express",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
