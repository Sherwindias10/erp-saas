rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(tenantId) {
      return isSignedIn() && request.auth.uid == tenantId;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == "superadmin@yourcompany.com";
    }

    match /tenants/{tenantId} {
      allow read, write: if isOwner(tenantId) || isSuperAdmin();

      match /customers/{docId} {
        allow read, write: if isOwner(tenantId);
      }

      match /products/{docId} {
        allow read, write: if isOwner(tenantId);
      }

      match /salesOrders/{docId} {
        allow read, write: if isOwner(tenantId);
      }

      match /ledgerEntries/{docId} {
        allow read, write: if isOwner(tenantId);
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
